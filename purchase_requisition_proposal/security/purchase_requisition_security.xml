<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">



    <record model="ir.rule" id="purchase_requisition.purchase_requisition_comp_rule">
        <field name="perm_read" eval="False" />
    </record>

    <record
        model="ir.rule"
        id="purchase_requisition.purchase_requisition_line_comp_rule"
    >
        <field name="perm_read" eval="False" />
    </record>

    <record model="ir.rule" id="purchase_requisition_comp_rule">
        <field name="name">Purchase Requisition multi-company</field>
        <field name="model_id" ref="model_purchase_requisition" />
        <field name="perm_read" eval="True" />
        <field
            name="domain_force"
        >['|','&amp;', ('company_to_call_ids','in',company_ids), ('state', 'in', ['open', 'done']), ('company_id', 'in', company_ids)]</field>
    </record>

    <record model="ir.rule" id="purchase_requisition_line_comp_rule">
        <field name="name">Purchase requisition Line multi-company</field>
        <field name="model_id" ref="model_purchase_requisition_line" />
        <field name="perm_read" eval="True" />
        <field
            name="domain_force"
        >['|','&amp;', ('requisition_id.company_to_call_ids','in',company_ids), ('requisition_id.state', 'in', ['open', 'done']), ('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
