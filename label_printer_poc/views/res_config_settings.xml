<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div name="barcode_setting_container" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="zebra_printer_name">
                    <label for="printer_host" />
                    <field name="printer_host"/>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="product_label_printer_name">
                    <label for="product_label_printer_name" />
                    <field name="product_label_printer_name"/>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="shipping_label_printer_name">
                    <label for="shipping_label_printer_name" />
                    <field name="shipping_label_printer_name" />
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="a4_printer_name">
                    <label for="a4_printer_name" />
                    <field name="a4_printer_name"/>
                </div>
            </div>
        </field>
    </record>
</odoo>
