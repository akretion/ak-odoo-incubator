<odoo>
    <record id="wizard_orderpoint_matrix_import_view_form" model="ir.ui.view">
        <field name="model">wizard.orderpoint.matrix.import</field>
        <field name="arch" type="xml">
            <form string="Import Reordering Rules">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="button_import_excel" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_orderpoint_matrix" model="ir.actions.act_window">
        <field name="name">Import Orderpoint matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.orderpoint.matrix.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_orderpoint_matrix" name="Import Orderpoint Matrix"
              parent="stock.menu_stock_inventory_control"
              action="stock_orderpoint_impex_matrix.action_import_orderpoint_matrix"/>
</odoo>

