<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.state.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="picking_ids" position="after">
				<button type="object"
                    name="action_view_task"
                    class="oe_stat_button"
                    icon="fa-tasks" attrs="{'invisible':[('task_id','=', False)]}"
                    string="Task"/>
                    <field name="task_id" invisible="1"/>
            </field>
            <field name="origin" position="after">
            	<field name="project_id" invisible="1"/>
            	<field name="stage_id" />
            	<field name="stage_manufacture" />
            	<field name="stage_delivery" />
            </field>
        </field>
	</record>

	<record id="purchase_order_tree" model="ir.ui.view">
        <field name="name">purchase.order.tree.state.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
            	<field name="stage_id" />
            </field>
        </field>
    </record>

    <record id="view_purchase_order_filter" model="ir.ui.view">
	    <field name="name">purchase_order.select</field>
	    <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
	    <field name="model">purchase.order</field>
    	<field name="arch" type="xml">
			<filter name="to_approve" position="after">
				<separator />
				<filter name="waiting_delivery" string="Waiting delivery"
					domain="[['stage_delivery','=','waiting']]" />
				<filter name="waiting_mrp" string="Waiting manufacturing"
						domain="[['stage_manufacture','=','waiting']]" />
			</filter>
			<group position="inside">
				<filter string="Stage" domain="[]" context="{'group_by':'stage_id'}"/>
            </group>

        </field>
	</record>
</odoo>
