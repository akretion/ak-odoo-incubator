<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>


    <!-- After installation of the module, open the adhoc menu -->
    <record id="action_client_module_menu" model="ir.actions.client">
        <field name="name">Open Menu</field>
        <field name="tag">reload</field>
        <field name="params" eval="{'menu_id': ref('sale.menu_sale_quotations')}"/>
    </record>
    <record id="base.open_menu" model="ir.actions.todo">
        <field name="action_id" ref="action_client_module_menu"/>
        <field name="state">open</field>
    </record>


</data>
</openerp>
