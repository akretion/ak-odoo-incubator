        <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']"
                position="after"
            >
            <field
                    name="analytic_account_id"
                    optional="show"
                    groups="account_analytic_simple.group_analytic_accounting_simple"
                />
        </xpath>
        <xpath
                expr="//field[@name='line_ids']/tree/field[@name='account_id']"
                position="after"
            >
            <field
                    name="analytic_account_id"
                    optional="show"
                    groups="account_analytic_simple.group_analytic_accounting_simple"
                />
        </xpath>
    </field>
</record>

</odoo>
