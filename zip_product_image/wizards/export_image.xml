<odoo>

    <record id="zip_product_image_form_view" model="ir.ui.view">
        <field name="model">zip.product.image</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name_zipfile" attrs="{'invisible': 1}" />
                    <field
                        name="zipfile"
                        filename="name_zipfile"
                        attrs="{'readonly': 1}"
                    />
                </group>
                <footer>
                    <button string="OK" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_zip_product_image" model="ir.actions.server">
        <field name="name">ðŸ“Ž Zip images export</field>
        <field name="model_id" ref="model_product_product" />
        <field name="binding_model_id" ref="model_product_product" />
        <field name="state">code</field>
        <field
            name="code"
        >action = env["product.product"]._generate_image_zipfile()</field>
    </record>

</odoo>
