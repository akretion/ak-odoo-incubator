<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_download_view" model="ir.ui.view">
            <field name="name">Download Invoices</field>
            <field name="model">account.move.download</field>
            <field name="arch" type="xml">
                <form string="Download Invoices">
                    <sheet>
                        <group>
                            <group>
                                <field name="file_name" invisible="1" />
                                <h3>
                                    Download: <field
                                        name="zip_file"
                                        filename="file_name"
                                        nolabel="0"
                                        />
                                </h3>
                                <p />
                                <p />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create zip file" name="create_zip_file" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_invoice_download" model="ir.actions.act_window">
            <field name="name">Download Invoices</field>
            <!--field name="type">ir.actions.act_window</field-->
            <field name="res_model">account.move.download</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_download_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
            <field name="help">This wizard allows you to download a zip file with the pdf of the selected invoices 
        </field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>
