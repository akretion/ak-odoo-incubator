<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="project_load_report_view_form" model="ir.ui.view">
    <field name="model">project.load.report</field>
    <field name="arch" type="xml">
        <form string="Load Report">
            Filter the project to analyse (if empty all project will be used)
            <field name="project_ids" widget="many2many_tags" />
            <footer>
                <button
                        string="Confirm"
                        name="open_report"
                        type="object"
                        class="oe_highlight"
                    />
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record model="ir.actions.act_window" id="project_load_report_action">
    <field name="name">Load Report</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">project.load.report</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

</odoo>
