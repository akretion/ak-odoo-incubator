<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Sale Rental</h2>
                    <div class="row mt16 o_settings_container" id="rental_configuration">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="rental_duration" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="rental_duration" string="Rental Duration"/>
                            <div class="text-muted">
                                Activate Rental Duration (Month, year, etc.)
                            </div>
                            <div class="content-group" attrs="{'invisible': [('rental_duration','=',False)]}">
                                <label for="rental_uom_id" string="Rental UoM"/>
                                <field name="rental_uom_id" />
                            </div>
                        </div>
                    </div>
                </div>
        </xpath>
        </field>
    </record>
</odoo>

