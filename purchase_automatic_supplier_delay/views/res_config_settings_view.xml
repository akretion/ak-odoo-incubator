<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<record id="res_config_settings_view_form_purchase" model="ir.ui.view">
		<field name="model">res.config.settings</field>
		<field name="priority" eval="30" />
		<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
		<field name="arch" type="xml">
			<xpath expr="//div[@name='purchase_setting_container']" position="inside">
				<div class="col-12 col-lg-6 o_setting_box">
					<div class="o_setting_right_pane">
						<label for="incoming_shipment_number_delay" />
						<span
                            class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            aria-label="Values set here are company-specific."
                            groups="base.group_multi_company"
                        />
						<div class="text-muted">
							Number of receptions used to automatically recompute the supplier delay
						</div>
						<div class="content-group">
							<div class="mt16">
								<span><field name="incoming_shipment_number_delay" class="oe_inline" /> days</span>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>
