<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="res_config_settings_view_form_purchase" model="ir.ui.view">
		<field name="model">res.config.settings</field>
		<field name="priority" eval="30"/>
		<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='group_manage_vendor_price']/../../.." position="inside">
			    <div id="supplierinfo_compute_delay">
                		<label string="Incoming Shipment Number Delay" class="o_light_label" for="incoming_shipment_number_delay"/>
                    		<field name="incoming_shipment_number_delay" class="oe_inline"/>
                	    </div>
			</xpath>
		</field>
	</record>

</odoo>
