<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="project_load_capacity_report_line_view_tree" model="ir.ui.view">
        <field name="model">project.load.capacity.report.line</field>
        <field name="arch" type="xml">
            <tree string="Load Report Line">
                <field name="week" />
                <field name="user_id" />
                <field name="total_planned_hours" />
                <field name="total_capacity_hours" />
                <field name="project_planned_hours" />
                <field name="project_capacity_hours" />
            </tree>
        </field>
    </record>

    <record id="project_load_capacity_report_line_view_search" model="ir.ui.view">
        <field name="model">project.load.capacity.report.line</field>
        <field name="arch" type="xml">
            <search string="Load Report Line">
                <field name="week" />
                <field name="user_id" />
                <group expand="0" string="Group By">
                    <filter
                        string="Week"
                        name="groupby_week"
                        domain="[]"
                        context="{'group_by': 'week'}"
                    />
                    <filter
                        string="User"
                        name="groupby_user"
                        domain="[]"
                        context="{'group_by': 'user_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="project_load_capacity_report_line_view_pivot" model="ir.ui.view">
        <field name="model">project.load.capacity.report.line</field>
        <field name="arch" type="xml">
            <pivot string="Load Analysis" disable_linking="True" sample="1">
                <field name="user_id" type="col" />
                <field name="week" type="row" />
                <field name="total_planned_hours" type="measure" />
                <field name="total_capacity_hours" type="measure" />
                <field name="project_planned_hours" type="measure" />
                <field name="project_capacity_hours" type="measure" />
            </pivot>
        </field>
    </record>

    <record model="ir.actions.act_window" id="project_load_capacity_report_line_action">
        <field name="name">Load Report Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.load.capacity.report.line</field>
        <field name="view_mode">tree,form,pivot</field>
        <field
            name="search_view_id"
            ref="project_load_capacity_report_line_view_search"
        />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
