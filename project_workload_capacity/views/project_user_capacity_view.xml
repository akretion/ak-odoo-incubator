<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="project_user_capacity_view_tree" model="ir.ui.view">
        <field name="model">project.user.capacity</field>
        <field name="arch" type="xml">
            <tree string="Capacity">
                <field name="name" />
                <field name="user_id" />
                <field name="filter_id" />
            </tree>
        </field>
    </record>

    <record id="project_user_capacity_view_form" model="ir.ui.view">
        <field name="model">project.user.capacity</field>
        <field name="arch" type="xml">
            <form string="Capacity">
                <div class="oe_button_box" name="button_box">
                    <button
                        class="oe_stat_button"
                        type="action"
                        name="%(project_capacity_unit_action)d"
                        icon="fa-book"
                    >
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Capacity Unit</span>
                        </div>
                    </button>
                </div>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="name" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="user_id" />
                        <field
                            name="filter_id"
                            context="{'default_model_id': 'project.project'}"
                        />
                    </group>
                </group>
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="date_start" />
                        <field name="date_end" />
                        <field name="hours" />
                        <field name="modulo" />
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="project_user_capacity_view_search" model="ir.ui.view">
        <field name="model">project.user.capacity</field>
        <field name="arch" type="xml">
            <search string="Capacity">
                <field name="name" />
                <field name="user_id" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="project_user_capacity_action">
        <field name="name">Capacity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.user.capacity</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="project_user_capacity_view_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
