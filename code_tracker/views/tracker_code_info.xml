<odoo>
    <record id="tracker_code_info_tree" model="ir.ui.view">
        <field name="name">tracker.code.info.tree</field>
        <field name="model">tracker.code.info</field>
        <field name="arch" type="xml">
            <tree string="Code tracker info">
                <field name="function_name" />
                <field name="model_name" />
                <field name="running_time" />
                <field name="user" />
            </tree>
        </field>
    </record>

    <record id="tracker_code_info_form" model="ir.ui.view">
        <field name="name">tracker.code.info.form</field>
        <field name="model">tracker.code.info</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="function_name" />
                    <field name="model_name" />
                    <field name="running_time" />
                    <field name="user" />
                </group>
                <group>
                    <field name="trace" />
                </group>
            </form>
        </field>
    </record>

    <record id="tracker_code_info_action" model="ir.actions.act_window">
        <field name="name">Tracker code information</field>
        <field name="res_model">tracker.code.info</field>
        <field name="view_id" ref="tracker_code_info_tree" />
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_tracker_code"
        name="Tracker code information"
        parent="base.menu_custom"
        sequence="31"
    />

    <menuitem
        id="menu_tracker_code_info"
        action="tracker_code_info_action"
        name="Tracker trace"
        parent="code_tracker.menu_tracker_code"
        sequence="1"
    />

</odoo>
