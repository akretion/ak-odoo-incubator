<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock_picking_invoice_link.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="invoice_id" position="after">
                    <field name="holding_invoice_state"
                           groups="account.group_account_invoice"
                           attrs="{'invisible':[('holding_company_id', '=', False)]}"/>
                    <field name="holding_invoice_id"
                           groups="account.group_account_invoice"
                           attrs="{'invisible':[('holding_invoice_state', '!=', 'invoiced')]}"/>
                </field>
                <field name="company_id" position="after">
                    <field name="holding_company_id" invisible="1"/>
                </field>
                <field name="partner_id" position="after">
                    <field name="section_id"/>
                </field>
            </field>
        </record>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock_account.view_move_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_state']" position="after">
                    <field name="holding_invoice_state" groups="account.group_account_invoice"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
