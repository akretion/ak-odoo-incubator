<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock_picking_invoice_link.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="invoice_id" position="after">
                    <field name="holding_invoice_state"
                           groups="account.group_account_invoice"
                           attrs="{'invisible':['|',('holding_company_id', '=', False), ('invoicing_partner_id', '=', False)]}"/>
                    <field name="holding_invoice_id"
                           groups="account.group_account_invoice"
                           attrs="{'invisible':[('holding_invoice_state', '!=', 'invoiced')]}"/>
                </field>
                <field name="company_id" position="after">
                    <field name="holding_company_id" invisible="1"/>
                    <field name="invoicing_partner_id" invisible="1"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
