<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="agreement_form" model="ir.ui.view">
  <field name="model">agreement</field>
  <field name="inherit_id" ref="agreement_account.agreement_form"/>
  <field name="arch" type="xml">
    <xpath expr="//notebook" position="inside">
      <page name="invoicing" string="Invoicing">
        <group name="holding" string="Holding">
          <group name="holding_left">
              <field name="holding_company_id" widget="selection"/>
              <field name="holding_discount" string="Discount %"
                     attrs="{'invisible': [('holding_company_id', '=', False)]}"/>
              <field name="holding_invoice_generated_by"
                     attrs="{'invisible': [('holding_company_id', '=', False)]}"/>
              <field name="holding_invoice_group_by"
                     attrs="{'invisible': [('holding_company_id', '=', False)]}"/>
          </group>
          <group name="holding_right">
              <field name="holding_product_id" string="Invoice Product"
                     attrs="{'invisible': [('holding_company_id', '=', False)],
                           'required': [('holding_company_id', '!=', False)]}"/>
              <field name="holding_royalty_product_id" string="Royalty Product"
                     attrs="{'invisible': [('holding_discount', '=', 0)],
                           'required': [('holding_discount', '!=', 0)]}"/>
          </group>
        </group>
      </page>
    </xpath>
    <xpath expr="//group[@name='sale_left']" position="inside">
        <field name="journal_id"/>
    </xpath>
  </field>
</record>

</odoo>
