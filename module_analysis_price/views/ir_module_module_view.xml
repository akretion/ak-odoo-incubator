<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="module_form" model="ir.ui.view">
    <field name="model">ir.module.module</field>
    <field name="inherit_id" ref="base.module_form" />
    <field name="arch" type="xml">
        <field name="installed_version" position="after">
            <field name="monthly_price" widget="monetary" />
            <field name="monthly_price_increase_if_installed" widget="monetary" />
        </field>
    </field>
</record>


    <record id="module_view_kanban" model="ir.ui.view">
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.module_view_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//kanban[hasclass('o_modules_kanban')]" position="attributes">
                <attribute name="js_class">module_kanban_dashboard</attribute>
            </xpath>
        </field>
    </record>

    <record id="module_action_dashboard_kanban" model="ir.actions.act_window">
        <field name="name">Modules</field>
        <field name="res_model">ir.module.module</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="module_view_kanban" />
        <field name="search_view_id" ref="base.view_module_filter" />
        <field name="target">main</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No modules to display
            </p>
        </field>
    </record>

</odoo>
